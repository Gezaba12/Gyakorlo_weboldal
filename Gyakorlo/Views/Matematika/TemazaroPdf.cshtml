@model List<Dictionary<string, List<Feladat>>>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Témazáró</title>
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex-grow: 1; /* Ezzel a tartalom kitölti a rendelkezésre álló helyet */
            padding: 40px 0;
        }

        .title {
            font-size: 32px;
            text-align: center;
        }

        .line {
            border-top: 2px solid black;
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            vertical-align: middle;
        }

        .footer {
            width: 100%;
            text-align: center;
            font-size: 12px;
            margin-top: 20px;
            padding-top: 10px;
            position: relative;
        }

    </style>
</head>
<body>

    <table>
        <tr>
            <td style="text-align: left; width: 30%;">Név: _____________________</td>
            <td class="title">Témazáró</td>
            <td style="text-align: right; width: 30%;">Érdemjegy: ______</td>
        </tr>
    </table>

    <div class="line"></div>

    <div class="content">
        @for (int i = 0; i < Model.Count; i++)
        {
            @foreach (KeyValuePair<string, List<Feladat>> feladat in Model[i])
            {
                <table>
                    <tr>
                        <td style="text-align: left;">@feladat.Key</td>
                        <td style="text-align: right;">___ / ___</td>
                    </tr>
                </table>
                <br />
                @for (int j = 0; j < feladat.Value.Count; j++)
                {
                    <div style="margin-bottom:10px;">@feladat.Value[j].Keplet.Replace("%%", "___")</div>
                }
            }
            <br />
            <br />
            <br />
        }
    </div>

    <div class="footer">
        <div class="line"></div>
        <table>
            <tr>
                <td style="text-align: left;">Dátum: _____________________</td>
                <td style="text-align: right;">Összesen: ___ / ___</td>
            </tr>
        </table>
    </div>

</body>
</html>
